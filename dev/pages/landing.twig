  </footer>

  <script>
    // Gestion des variantes via param√®tres URL
    (function() {
      const urlParams = new URLSearchParams(window.location.search);

      // Hero variant
      const heroVariant = urlParams.get('hero_variant');
      if (heroVariant) {
        const hero = document.querySelector('.hero');
        hero.className = `hero hero--${heroVariant}`;

        // Mettre √† jour la navbar selon le variant
        const navbar = document.querySelector('.navbar');
        if (heroVariant === 'dark') {
          navbar.className = 'navbar navbar--dark';
          navbar.querySelector('.btn').className = 'btn btn--primary btn--small';
        }

        // Mettre √† jour les titres selon le variant
        const title = document.querySelector('.hero__title');
        const subtitle = document.querySelector('.hero__subtitle');

        if (heroVariant === 'minimal') {
          title.textContent = 'Design System Simple';
          subtitle.textContent = 'Des composants r√©utilisables pour vos projets.';
        } else if (heroVariant === 'dark') {
          title.textContent = 'Cr√©ez des Interfaces Exceptionnelles';
        }
      }

      // Show/Hide features
      if (urlParams.get('show_features') === 'false') {
        const features = document.querySelector('.features');
        if (features) features.style.display = 'none';
      }

      // Show/Hide CTA
      if (urlParams.get('show_cta') === 'false') {
        const cta = document.querySelector('.cta');
        if (cta) cta.style.display = 'none';
        const heroActions = document.querySelector('.hero__actions');
        if (heroActions) heroActions.style.display = 'none';
      }
    })();
  </script>
</body>
</html>
