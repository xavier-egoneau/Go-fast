{
  "name": "Badge",
  "category": "UI Elements",
  "description": "Badge ou étiquette pour afficher des statuts, notifications ou catégories",
  "variants": {
    "variant": {
      "label": "Variante",
      "type": "select",
      "default": "primary",
      "options": ["primary", "secondary", "success", "danger", "warning", "info", "primary-light", "success-light", "danger-light", "warning-light"]
    },
    "size": {
      "label": "Taille",
      "type": "select",
      "default": "normal",
      "options": ["small", "normal", "large"]
    },
    "rounded": {
      "label": "Arrondi (pill)",
      "type": "checkbox",
      "default": false
    }
  },
  "content": {
    "text": {
      "label": "Texte du badge",
      "type": "text",
      "default": "Badge"
    }
  }
}
