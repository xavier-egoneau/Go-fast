{#
/**
 * Composant Card avec Tailwind CSS
 *
 * @param {string} title - Titre de la carte
 * @param {string} description - Description de la carte
 * @param {string} image - URL de l'image
 * @param {string} badge - Badge optionnel
 * @param {boolean} shadow - Afficher une ombre
 * @param {string} classes - Classes CSS additionnelles
 */
#}

{% set title = title|default('Beautiful Landscape') %}
{% set description = description|default('DÃ©couvrez cette magnifique carte avec une image et un effet de zoom au survol.') %}
{% set image = image|default('https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=800') %}
{% set badge = badge|default('Featured') %}
{% set shadow = shadow|default(true) %}
{% set classes = classes|default('') %}

{# Classes de base #}
{% set baseClasses = 'rounded-lg overflow-hidden bg-white border border-[#e5e7eb] transition-shadow duration-200' %}
{% set shadowClasses = shadow ? 'shadow-md hover:shadow-lg' : '' %}

{% set cardClasses = [
  baseClasses,
  shadowClasses,
  classes|default('')
]|join(' ') %}

<div class="{{ cardClasses }}">
  {% if image %}
    <div class="aspect-video w-full overflow-hidden">
      <img
        src="{{ image }}"
        alt="{{ title }}"
        class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
      >
    </div>
  {% endif %}

  <div class="p-6">
    {% if badge %}
      <span class="inline-block px-3 py-1 mb-3 text-xs font-semibold bg-[#0066cc] text-white rounded-full">
        {{ badge }}
      </span>
    {% endif %}

    {% if title %}
      <h3 class="text-2xl font-bold text-[#111827] mb-2">
        {{ title }}
      </h3>
    {% endif %}

    {% if description %}
      <p class="text-[#4b5563] leading-relaxed">
        {{ description }}
      </p>
    {% endif %}
  </div>
</div>
